{
  "description": "Auto-generate and maintain ctags index for efficient code navigation",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/regenerate-tags.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/regenerate-tags.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "If searching for a code definition (class, function, method, type), check .claude/tags first: grep '^SymbolName\\t' .claude/tags â€” this is faster and uses fewer tokens than broad searches."
          }
        ]
      }
    ]
  }
}
